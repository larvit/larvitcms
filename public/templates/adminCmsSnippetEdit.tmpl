<%- include('inc/head', data) %>
<%- include('inc/pageTop', data) %>
<script src="//tinymce.cachefly.net/4.2/tinymce.min.js"></script>
<script>tinymce.init({
	'selector': 'textarea',
	'toolbar': 'undo redo | formatselect bold italic underline strikethrough | bullist numlist | subscript superscript | link unlink image | removeformat code',
	'menubar': false,
	'plugins': 'link image code',
	'valid_elements': 'ul,li,ol,br,p,strong,a[href|target],em,span,sup,sub,h1,h2,h3,h4,h5,h6,br,img[id|lang|longdesc|src|alt|title|width|height|rel]'
});</script>
<form method="post">

	<%- include('inc/adminCmsSnippetEditControls', data) %>

	<fieldset>
		<legend>Snippet</legend>

		<div class="row">
			<div class="three columns">
				<label for="name">Name</label>
				<input type="text" value="<%= data.global.urlParsed.query.name %>" name="name" <% if (data.global.urlParsed.query.name !== undefined) { print('readonly="readonly"'); }  %> />
			</div>
		</div>

	<% if ( ! data.global.urlParsed.query.langs) data.global.urlParsed.query.langs = 'en'; %>

	<% _.each(data.global.urlParsed.query.langs.split(','), function (lang) { %>
		<div class="row">
			<label for="body.<%= lang %>">Snippet content, language: <%= lang %></label>
			<textarea class="u-full-width" name="body.<%= lang %>" rows="20"><% if (data.global.formFields['body.' + lang]) print(data.global.formFields['body.' + lang]) %></textarea>
		</div>
	</fieldset>
	<% }); %>

	<%- include('inc/adminCmsSnippetEditControls', data) %>

</form>
<%- include('inc/pageBottom', data) %>
